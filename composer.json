{
    "name": "ssnukala/sprinkle-commerce",
    "type": "userfrosting-sprinkle",
    "description": "Comprehensive eCommerce Sprinkle for UserFrosting 6 - Orders, Payments, and Product Catalog",
    "keywords": [
        "php user management",
        "userfrosting",
        "sprinkle",
        "ecommerce",
        "orders",
        "payment",
        "products",
        "catalog",
        "paypal",
        "stripe",
        "apple pay",
        "google pay"
    ],
    "homepage": "https://github.com/ssnukala/sprinkle-commerce",
    "license": "MIT",
    "authors": [
        {
            "name": "Srinivas Nukala",
            "homepage": "https://srinivasnukala.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "userfrosting/framework": "^6.0",
        "userfrosting/sprinkle-core": "^6.0",
        "userfrosting/sprinkle-account": "^6.0",
        "userfrosting/sprinkle-admin": "^6.0",
        "ssnukala/sprinkle-crud6": "^1.0",
        "stripe/stripe-php": "^10.0",
        "paypal/rest-api-sdk-php": "^1.14"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.1",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.2",
        "fakerphp/faker": "^1.17"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\Commerce\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\Commerce\\Tests\\": "app/tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse app/src --level=5"
    }
}
