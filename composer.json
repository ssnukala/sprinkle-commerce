{
    "name": "ssnukala/sprinkle-commerce",
    "type": "userfrosting-sprinkle",
    "description": "eCommerce Sprinkle for UserFrosting 6 - Orders and Product Catalog",
    "keywords": [
        "php user management",
        "userfrosting",
        "sprinkle",
        "ecommerce",
        "orders",
        "products",
        "catalog"
    ],
    "homepage": "https://github.com/ssnukala/sprinkle-commerce",
    "license": "MIT",
    "authors": [
        {
            "name": "Srinivas Nukala",
            "homepage": "https://srinivasnukala.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "userfrosting/framework": "^6.0",
        "userfrosting/sprinkle-core": "^6.0",
        "userfrosting/sprinkle-account": "^6.0",
        "ssnukala/sprinkle-crud6": "dev-main as 6.0.x-dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.2",
        "fakerphp/faker": "^1.17",
        "slam/phpstan-extensions": "^6.0",
        "php-mock/php-mock-mockery": "^1.3"
    },
    "suggest": {
        "ssnukala/sprinkle-payment": "Payment processing with multiple gateway support (Stripe, PayPal, Apple Pay, Google Pay)"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\Commerce\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\Commerce\\Tests\\": "app/tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:php"
        ],
        "test:php": "phpunit",
        "phpcs": "php-cs-fixer fix --dry-run --diff --verbose",
        "phpcs:fix": "php-cs-fixer fix --diff --verbose",
        "phpstan": "phpstan analyse app/src --level 8"
    },
    "repositories": {
        "sprinkle-crud6": {
            "type": "vcs",
            "url": "https://github.com/ssnukala/sprinkle-crud6"
        }
    }
}
